{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "ROOT/*": ["./*"],
      "@/*": ["./src/*"],
      "@payload/*": ["./src/app/(payload)/*"],
      "@app/*": ["./src/app/(app)/*"],
      "@payload-config": ["./payload.config.ts"],
      "@payload-types": ["./payload-types.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "redirects.js", "next.config.js"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
